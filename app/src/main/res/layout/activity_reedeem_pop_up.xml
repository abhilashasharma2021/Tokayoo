<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ReedeemPopUpActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:layout_below="@+id/rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_Name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#dbdbdb"
                android:visibility="visible">


                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/imgBack"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Note:-Please provide correct delivery information. you are not allowed to amend, modify or correct any information after submission."
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_select_add"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:visibility="visible"
                    android:textColor="@color/pink"
                    android:background="@drawable/btn_select_location"
                    android:textAllCaps="true"
                    android:text="Select Address"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >


                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Name*"
                    android:textColor="@color/grey_light"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="14sp"
                    android:textStyle="normal" />




                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:maxLength="100"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:id="@+id/edt_name"
                    android:layout_below="@+id/txt1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Your name here"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:singleLine="true"
                    android:maxLength="100"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:id="@+id/txt_name"
                    android:layout_below="@+id/txt1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Your name here"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/txt_email"
                android:background="@color/grey_light"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >


                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Contact*"
                    android:textColor="@color/grey_light"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:id="@+id/edt_contact"
                    android:layout_below="@+id/txt2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Contact"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:id="@+id/txt_contact"
                    android:layout_below="@+id/txt2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Contact"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/txt_email"
                android:background="@color/grey_light"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >


                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Address*"
                    android:textColor="@color/grey_light"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:maxLength="180"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:id="@+id/edt_address"
                    android:layout_below="@+id/txt3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Your mailing address"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:singleLine="true"
                    android:maxLength="180"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:textSize="14sp"
                    android:id="@+id/txt_address"
                    android:layout_below="@+id/txt3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Your mailing address"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/txt_email"
                android:background="@color/grey_light"/>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_Cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/greycontinue_rounded"
                android:elevation="6dp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/dark"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_continue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_Submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pinkcontinue_rounded"
                android:elevation="6dp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_above="@+id/rl_new"
        android:layout_below="@+id/img_product"
        android:layout_marginTop="10dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/rl_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll">

        <RelativeLayout
            android:id="@+id/rl_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/txt_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Net Weight"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_sym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_weight"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="KG"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>




        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_net"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_deliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Delivery Fee"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/txt_sym1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="RM"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_deliv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/txt_sym1"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_delivery"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Total Points"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_sym2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="RM"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_Totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txt_sym2"
                android:fontFamily="@font/lato_bold"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        style="@style/SpinKitView.ChasingDots"
        app:SpinKit_Color="@color/pink"/>
</RelativeLayout>