<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#222"
            android:text="Reward Successully"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans_regular"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:layout_below="@+id/txtLocal"
            android:textColor="#222"
            android:text="We will arrange to your parcel with in 3  working days."/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btn_ok"
            android:text="Ok"
            android:textColor="@color/black"
            android:background="@drawable/greyew_rounded"/>


    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/rl"
    android:gravity="center"
    android:visibility="gone"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnok"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="normal"
        android:textSize="14dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:textColor="@color/black"
        android:background="@drawable/btn_select_location"
        android:textAllCaps="true"
        android:text="Ok"/>

</RelativeLayout>

</RelativeLayout>
