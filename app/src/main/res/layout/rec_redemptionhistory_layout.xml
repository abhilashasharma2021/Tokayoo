<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:elevation="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/lato_bold"
                android:text="Delivered"
                android:textColor="@color/blue"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_bold"
                android:text="Redemption  No."
                android:textColor="@color/grey_light"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/txt_redemNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txt_order"
                android:fontFamily="@font/opensans_bold"
                android:text="-"
                android:textColor="@color/grey_light"
                android:textSize="14sp" />


            <RelativeLayout
                android:id="@+id/card"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/txt_order"
                android:layout_marginTop="10dp"
                android:background="@drawable/greylight_strk"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/a5" />
            </RelativeLayout>

            <TextView

                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/card"
                android:fontFamily="@font/open_sans_regular"
                android:text="-"
                android:textColor="@color/grey_light"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_toRightOf="@+id/card">

                <TextView

                    android:id="@+id/txt_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="-"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />


                <TextView

                    android:id="@+id/txt_point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/txt_point"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Points"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_qty"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_2"
                android:layout_toRightOf="@+id/card">

                <TextView

                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="-"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/txt_date"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="-"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#dbdbdb" />
</LinearLayout>
