<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ShowNewArrival">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <RelativeLayout
                android:id="@+id/linearHeader"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_search"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/pink_rounded"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edit_Search"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:fontFamily="@font/open_sans_regular"
                        android:hint="Search"
                        android:paddingLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="?actionBarItemBackground"
                        android:padding="10dp"
                        android:src="@drawable/search_100" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_Name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="visible"
                    >

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:background="?actionBarItemBackground"
                        android:padding="12dp"
                        android:src="@drawable/bback"
                        />

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/imgBack"
                        android:text="New Arrival"
                        android:textColor="@color/grey_light"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_below="@+id/rec_brands_hori"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/v"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:background="#dbdbdb"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/linearHeader"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rec_newArrival"/>


            </RelativeLayout>
        </LinearLayout>


    </ScrollView>
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        style="@style/SpinKitView.CubeGrid"
        app:SpinKit_Color="@color/pink" />
</RelativeLayout>