<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
   android:layout_margin="10dp"
    android:id="@+id/rl_forgot"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/greyew_rounded"
        android:layout_height="160dp">


        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_light"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="your total amount will be deductaed in your get reward points Only you have to pay delivery fee"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/txt"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tx_cancel"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textColor="@color/grey_light"
                android:textSize="15sp"
                android:background="@drawable/greycontinue_rounded"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:text="Cancel"/>

            <TextView
                android:id="@+id/txt_ok"
                android:layout_width="100dp"
                android:layout_alignParentRight="true"
                android:layout_height="35dp"
                android:background="@drawable/pinkcontinue_rounded"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Ok"/>




        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>
