<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_noti"
        android:layout_below="@+id/linearHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/grey_dot" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:id="@+id/tx_title"
            android:text="Welcome Message from finishing app"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView

            android:id="@+id/txt_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="lustrous black hair in minutes  "
            android:layout_below="@+id/tx_title"
            android:textColor="@color/grey_light"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_qty"

        android:paddingLeft="70dp"
        android:layout_below="@+id/rl_noti"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:text="22/05/2020"
            android:textColor="@color/grey_light"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/txt_time"
            android:layout_toRightOf="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="3.00 PM"
            android:textColor="@color/grey_light"
            android:textSize="14sp" />

    </RelativeLayout>


    <View
        android:layout_below="@+id/rl_qty"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#dbdbdb"/>

</RelativeLayout>
