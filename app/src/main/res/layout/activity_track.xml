<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TrackActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_search"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pink_rounded"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_Search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:fontFamily="@font/open_sans_regular"
                android:hint="Search"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?actionBarItemBackground"
                android:padding="10dp"
                android:src="@drawable/search" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_Name"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible"

            >


            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/grey_circle"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:layout_centerInParent="true"
                    android:background="?actionBarItemBackground"

                    android:tint="@color/white"
                    android:src="@drawable/back"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/rl_back"
                android:text="Shipping Info"
                android:textColor="@color/grey_light"
                android:fontFamily="@font/opensans_bold"
                android:textSize="18sp"
                android:textStyle="bold" />






        </RelativeLayout>







    </LinearLayout>
    <View
        android:layout_below="@+id/linearHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="#dbdbdb"/>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_below="@+id/view"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="125dp"
        android:background="@drawable/greylight_strk"
        android:elevation="6dp"
        android:id="@+id/card"
        android:layout_height="125dp">


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/a5"
            android:layout_margin="2dp"
            android:layout_height="120dp"/>
    </RelativeLayout>

        <TextView

            android:layout_toRightOf="@+id/card"
            android:id="@+id/txt_name"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/opensans_bold"
            android:text="GDEX"
            android:textColor="@color/grey_light"
            android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/card"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/txt_name"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Tracking No."
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_orderNo"
                    android:layout_toRightOf="@+id/txt_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="13695200UD"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />

    </RelativeLayout>

    </RelativeLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view1"
                android:layout_marginTop="10dp"
                android:background="#dbdbdb"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/img"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/grey_dot" />


                <View
                    android:layout_below="@+id/img"
                    android:layout_width="1dp"

                    android:layout_marginLeft="20dp"
                    android:layout_height="60dp"
                    android:background="@color/grey_light"/>


            </RelativeLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/tx_title"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/rl_noti"
                    android:text="GDEX PJS01 Parcel out for delivery ."
                    android:textColor="@color/pink"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rl_qty"
                    android:layout_below="@+id/tx_title"
                    android:layout_marginLeft="60dp"
                    android:layout_height="wrap_content">
                    <TextView

                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="26/05/2020"
                        android:textColor="@color/grey_light"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/txt_time"
                        android:layout_toRightOf="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="11.32 am"
                        android:textColor="@color/grey_light"
                        android:textSize="14sp" />

                </RelativeLayout>


                <View
                    android:layout_below="@+id/rl_qty"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view2"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#dbdbdb"/>

                <RelativeLayout
                    android:id="@+id/rl_noti1"
                    android:layout_below="@+id/rl_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/img1"

                        android:layout_marginLeft="15dp"
                        android:src="@drawable/grey_dot" />


                    <View
                        android:layout_below="@+id/img1"
                        android:layout_width="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="60dp"
                        android:background="@color/grey_light"/>


                </RelativeLayout>



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/tx_title1"
                    android:layout_below="@+id/view2"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/rl_noti1"
                    android:text="GDEX PJS01 Parcel has arrived hub  PJS ."
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rl_qty1"
                    android:layout_below="@+id/tx_title1"
                    android:layout_marginLeft="70dp"
                    android:layout_height="wrap_content">
                    <TextView

                        android:id="@+id/txt_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="25/05/2020"
                        android:textColor="@color/grey_light"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/txt_time1"
                        android:layout_toRightOf="@+id/txt_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="7.32 pm"
                        android:textColor="@color/grey_light"
                        android:textSize="14sp" />

                </RelativeLayout>


                <View
                    android:layout_below="@+id/rl_qty1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view3"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#dbdbdb"/>



                <RelativeLayout
                    android:id="@+id/rl_noti2"
                    android:visibility="visible"
                    android:layout_below="@+id/rl_noti1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/img2"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/grey_dot" />


                    <View
                        android:layout_below="@+id/img2"
                        android:layout_width="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="50dp"
                        android:background="@color/grey_light"/>


                </RelativeLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tx_title2"
                    android:layout_below="@+id/view3"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/rl_noti2"
                    android:text="GDEX PJS01 Parcel has been picked up ."
                    android:textColor="@color/grey_light"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rl_qty2"
                    android:layout_below="@+id/tx_title2"
                    android:layout_marginLeft="70dp"
                    android:layout_height="wrap_content">
                    <TextView

                        android:id="@+id/txt_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="25/05/2020"
                        android:textColor="@color/grey_light"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/txt_time2"
                        android:layout_toRightOf="@+id/txt_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="16.32 pm"
                        android:textColor="@color/grey_light"
                        android:textSize="14sp" />

                </RelativeLayout>
                <View
                    android:layout_below="@+id/rl_qty2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view4"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#dbdbdb"/>

            </RelativeLayout>




        </LinearLayout>
</ScrollView>
</RelativeLayout>