<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:textStyle">bold </item>
        <item name="android:textSize">12dp </item>
    </style>

    <style name="myTextInputLabel" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/pink</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/pink</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.Notification">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/windowHideAnimation</item>
    </style>





    <style name="AppTheme2" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>





    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#dbdbdb</item>
        <item name="colorControlActivated">#f0a732</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

</resources>